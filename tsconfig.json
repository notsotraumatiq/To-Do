{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.module\\.css$",
          "camelCase": true,
          "generateScopedName": "[name]__[local]___[hash:base64:5]"
        }
      }
    ],
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "jsx": "react",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "webpack.config.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
